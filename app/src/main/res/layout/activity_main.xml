<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="67dp"
        android:layout_marginTop="4dp"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobar" />

    <View
        android:id="@+id/rectangle_5"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#2274A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"

        android:fontFamily="@font/montserrat_medium"
        android:text="HOME"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="404dp"
        android:layout_height="210dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/homebg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="I'm looking for"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/calculator"
        android:drawableTint="@color/darkBlue"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Calculator"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toTopOf="@+id/vr"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/cameraicon"
        android:drawablePadding="55dp"
        android:drawableTint="@color/darkBlue"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Camera"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/more"
        app:layout_constraintEnd_toStartOf="@+id/more"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/more"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/more"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/dots"
        android:gravity="center"
        android:paddingStart="8dp"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/internet"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/custom_wifi"

        android:drawablePadding="55dp"
        android:drawableTint="@color/darkBlue"

        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Internet"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/vr"
        app:layout_constraintEnd_toStartOf="@+id/vr"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vr"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/laptop"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/laptop"
        android:drawablePadding="55dp"
        android:drawableTint="@color/darkBlue"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Laptop"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/calculator"
        app:layout_constraintEnd_toStartOf="@+id/calculator"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calculator"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/vr"
        android:layout_width="wrap_content"
        android:layout_height="30dp"

        android:layout_marginEnd="160dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/mybutton"
        android:drawableLeft="@drawable/custom_book"

        android:drawablePadding="55dp"
        android:drawableTint="@color/darkBlue"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Book"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintBottom_toTopOf="@+id/more"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler"
        android:layout_width="231dp"
        android:layout_height="452dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:backgroundTint="@color/lightBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>